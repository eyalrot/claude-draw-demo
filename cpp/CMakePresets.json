{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build with sanitizers",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_SANITIZERS": "ON",
                "ENABLE_COVERAGE": "OFF",
                "BUILD_TESTS": "ON",
                "BUILD_BENCHMARKS": "OFF"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Release build with optimizations",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ENABLE_SANITIZERS": "OFF",
                "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
                "BUILD_TESTS": "ON",
                "BUILD_BENCHMARKS": "ON"
            }
        },
        {
            "name": "coverage",
            "displayName": "Coverage",
            "description": "Debug build with coverage",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_COVERAGE": "ON",
                "ENABLE_SANITIZERS": "OFF",
                "BUILD_TESTS": "ON",
                "BUILD_BENCHMARKS": "OFF",
                "BUILD_PYTHON_BINDINGS": "OFF"
            }
        },
        {
            "name": "dev",
            "displayName": "Development",
            "description": "Development build with all features",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "BUILD_TESTS": "ON",
                "BUILD_BENCHMARKS": "ON",
                "BUILD_PYTHON_BINDINGS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "configurePreset": "release",
            "configuration": "Release"
        },
        {
            "name": "coverage",
            "configurePreset": "coverage",
            "configuration": "Debug"
        },
        {
            "name": "dev",
            "configurePreset": "dev",
            "configuration": "RelWithDebInfo"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "output": {
                "verbosity": "verbose"
            }
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "coverage",
            "configurePreset": "coverage",
            "execution": {
                "noTestsAction": "error"
            }
        }
    ]
}